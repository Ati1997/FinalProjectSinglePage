@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h2 class="mb-4">Products CRUD</h2>

    <!-- Add / Edit Product Form -->
    <div class="card mb-4">
        <div class="card-header">Add / Edit Product</div>
        <div class="card-body">
            <form id="formAddProduct" class="row g-3">
                <input type="hidden" id="id" /> <!-- نگهداری Id برای Edit -->

                <div class="col-md-4">
                    <input type="text" class="form-control" id="title" placeholder="Title" required>
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control" id="description" placeholder="Description" required>
                </div>

                <div class="col-md-2">
                    <input type="number" class="form-control" id="price" placeholder="Price" required>
                </div>

                <div class="col-md-2 d-flex">
                    <button type="submit" class="btn btn-primary w-100" id="btnSave">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Result Message -->
    <div id="resultMessage" class="alert alert-info text-center" style="opacity:0; transition: opacity 0.5s;"></div>

    <!-- Products Table -->
    <div class="card">
        <div class="card-header">Products List</div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tbodyProducts"></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/Product.js"></script>
